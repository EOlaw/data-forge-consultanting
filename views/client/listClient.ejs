<% layout('layouts/boilerplate') %>

<div class="container mt-4">
    <h1>Clients</h1>
    <a href="/clients/new" class="btn btn-primary mb-3">Create New Client</a>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% clients.forEach(client => { %>
                    <tr>
                        <td><%= client.userId.firstname %> <%= client.userId.lastname %></td>
                        <td><%= client.userId.email %></td>
                        <td>
                            <a href="/clients/<%= client._id %>" class="btn btn-info btn-sm">View</a>
                            <a href="/clients/<%= client._id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/clients/<%= client._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
